import discord,random,os,requests
from discord.ext import commands

intents = discord.Intents.default()
intents.members = True
intents.message_content = True

bot = commands.Bot(command_prefix='?', intents=intents)

@bot.command()
async def mem(ctx):
    images_n=['mem1.jpg','mem2.jpg','mem3.jpg']
    with open(f'images/{random.choice(images_n)}', 'rb') as f:
            picture = discord.File(f)
   # Можем передавать файл как параметр!
    await ctx.send(file=picture)

@bot.command()
async def repeat(ctx, times: int, content='repeating...'):
    """Repeats a message multiple times."""
    for i in range(times):
        await ctx.send(content)
def get_animals_image_url():
    list1=['https://random-d.uk/api/random','https://random.dog/woof.json','https://randomfox.ca/floof/']  
    url = random.choice(list1)
    res = requests.get(url)
    data = res.json()
    return data['url']


@bot.command('animals')
async def animals(ctx):
    '''По команде duck вызывает функцию get_duck_image_url'''
    image_url = get_animals_image_url()
    await ctx.send(image_url)

bot.run('TOKEN')
